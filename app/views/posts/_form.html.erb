<%= form_for @post do |f| %>

    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %> <br /> <br />
  
    <%= f.label :body %><br />
    <%= f.text_field :body %> <br />

  <% if @post.body %>
    <%= f.submit "Update Post" %>
  <% else %>
    <%= f.submit "Submit", :class => 'submit' %>
  <% end  %>

<% end %>

